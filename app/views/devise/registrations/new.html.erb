<div class="container">
  <h4 style="margin-bottom: 30px;margin-top: 100px">
    <span class="head-text">新規登録</span>
  </h4>
  <div class="row">
    <div class="col-lg-12">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <!-- １項目づつrowで分けてcolで区切ることで、レイアウトを統一 -->
    <div class="row">
      <div class="col-lg-4">
        <p style="float: right">(性)</p>
        <p>名前</p>
      </div>
      <div class="col-lg-3">
         <%= f.text_field :first_name, autofocus: true, autocomplete: "off" %>
         <p style="float:right">(名)</p>
      </div>
      <div class="log-lg-3">
        <%= f.text_field :last_name, autocomplete: "off" %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <p style="float: right">(セイ)</p>
        <p>フリガナ</p>
      </div>
      <div class="col-lg-3">
         <%= f.text_field :first_name_phonetic, autocomplete: "off" %>
         <p style="float:right">(メイ)</p>
      </div>
      <div class="log-lg-3">
        <%= f.text_field :last_name_phonetic, autocomplete: "off" %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <p>メールアドレス</p>
      </div>
      <div class="col-lg-3">
         <%= f.email_field :email, autocomplete: "off" %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <p>郵便番号(ハイフンなし)</p>
      </div>
      <div class="col-lg-3">
         <%= f.text_field :postcode, autocomplete: "off"%>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <p>住所</p>
      </div>
      <div class="col-lg-5">
         <%= f.text_field :address, autocomplete: "off" ,style:"width:100%" %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <p>電話番号(ハイフンなし)</p>
      </div>
      <div class="col-lg-3">
         <%= f.text_field :tel, autocomplete: "off"%>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <p>パスワード(6文字以上)</p>
      </div>
      <div class="col-lg-3">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <p>パスワード(確認用)</p>
      </div>
      <div class="col-lg-3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

  　 <div class="row">
      <div class="col-lg-12", style="text-align:center;">
        <%= f.hidden_field :is_avtive, value: "有効" %>
        <%= f.submit "新規登録" ,class:"btn btn-success btn-lg",
          style:"padding:5px 30px;margin-bottom:30px " %>
      </div>
    </div>
  <% end %>
</div>
  </div>

  <h4 style="margin-top: 30px"><span class="head-text">既に登録済みの方</span></h4>
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <p style="padding-left: 20px">
        <a href="/customers/sign_in", style="color: blue; border-bottom: 1px solid blue">
          こちら</a>
          からログインしてください。
      </p>
    </div>
  </div>

</div>
