<h1>会員情報編集</h1>
<%= form_for(@customer, url: admin_customers_path) do|f| %>
<h4>会員ID</h4>

<h4>氏名</h4>
<%= f.text_field :first_name %>
<%= f.text_field :last_name %>

<h4>フリガナ</h4>
<%= f.text_field :first_name_phonetic %>
<%= f.text_field :last_name_phonetic %>

<h4>郵便番号</h4>
<%= f.number_field :postcode %>

<h4>住所</h4>
<%= f.text_area :address %>

<h4>電話番号</h4>
<%= f.telephone_field :tel %>

<h4>メールアドレス</h4>
<%= f.email_field :email %>

<h4>会員ステータス</h4>
<%= f.radio_button :is_active, :effectiveness %>
<%= f.label :is_active,"有効", {value: :effectiveness, style: "dispaly: inline-block;"} %>
<%= f.radio_button :is_active, :Withdrawn %>
<%= f.label :is_active, "退会済み", {value: :Withdrawn, style: "display: inline-block;"} %>

<%= f.submit '変更を保存する' %>

<% end %>