<div class="container">
	<h3>注文履歴詳細</h3>
	<div class="row">
		<div class="col-lg-3">
			<p style="font-weight: bold">購入者</p>
		</div>
		<div class="col-lg-9">
			<p>
				<%= link_to admin_customer_path(@order.customer) do %>
					<%= @order.customer.first_name %><%= @order.customer.last_name %>
				<% end %>
			</p>
		</div>

		<div class="col-lg-3">
			<p style="font-weight: bold">配送先</p>
		</div>
		<div class="col-lg-9">
			<p><%= @order.postcode %> <%= @order.address %></p>
			<p><%= @order.name %></p>
		</div>

		<div class="col-lg-3">
			<p style="font-weight: bold">支払方法</p>
		</div>
		<div class="col-lg-9">
			<p><%= @order.payment_method %></p>
		</div>

		<div class="col-lg-3">
			<p style="font-weight: bold">注文ステータス</p>
		</div>
		<div class="col-lg-9">
			<p>注文ステータス</p>
		</div>
	</div>

	<div class=row>
		<div class="col-lg-8">
			<table class="table">
				<thead>
					<tr>
						<th>商品名</th>
						<th>単価(税込)</th>
						<th>数量</th>
						<th>小計</th>
						<th>制作ステータス</th>
						<th></th>
					</tr>
				</thead>
				<% @sum = 0 %>
				<% @order_details.each do |order_detail| %>
				<tr>
					<td><%= order_detail.product.name %></td>
					<td><%= (order_detail.product.price * 1.1).to_i %></td>
					<td><%= order_detail.count %></td>
					<td><%= (order_detail.product.price * 1.1 * order_detail.count).to_i %>
						<% @sum += (order_detail.product.price * 1.1 * order_detail.count) %>
					</td>
					<td>ステータス</td>
					<td>更新ボタン</td>
				</tr>
				<% end %>
			</table>
		</div>

		<div class="col-lg-4 align-bottom">
			<div class="row">
				<div class="col-lg-7">
					<p>商品合計</p>
					<p>送料</p>
					<p>請求金額合計</p>
				</div>
				<div class="col-lg-5">
					<p><%= @sum.to_i %></p>
					<p><%= @order.postage %>
					<p><%= @order.total_products_cost + @order.postage %>
				</div>
			</div>
		</div>
	</div>
</div>