<div class="container">
	<div class="row">
		<div class="col-lg-8 offset-lg-2">
			<h3>注文履歴一覧</h3>
			<table class="table">
				<thead class="thead-light">
					<tr>
						<th>購入日時</th>
						<th>購入者</th>
						<th>注文個数</th>
						<th>注文ステータス</th>
					</tr>
				</thead>
				<% @orders.each do |order| %>
				<tr>
					<td>
						<%= link_to admin_order_path(order) do %>
							<span style="color: black"><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></span>
						<% end %>
					</td>
					<td><%= order.customer.first_name %><%= order.customer.last_name %></td>
					<td><%= @total_count %></td>
					<td><%= order.order_status %></td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>