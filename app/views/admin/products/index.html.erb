<div class="container">
	<div class="row" >
		<div class="col-xs-3">
			<h3 style="margin-bottom:30px;"><span class="head-text">商品一覧</span></h3>
		</div>
	    <div class="col-xs-3">
	    	<a href="http://localhost:3000//admin/products/new">
	    		<button type="button" class="btn btn-secondary rounded-circle p-0" style="width:3rem;height:3rem;margin-left:850px;margin-top:45px; ">＋</button>
	    	</a>
	    </div>
	</div>
		<div class="row">
			<div class="col-lg-12">
				<table class="table table-hover">
  				<thead>
    				<tr>
      					<th>商品ID</th>
      					<th>商品名</th>
      					<th>税抜価格</th>
      					<th>ジャンル</th>
      					<th>ステータス</th>
    				</tr>
  				</thead>
  				<tbody>
  					<% @products.each do |product| %>
    				<tr>
      					<td><%= product.id %></td>
      					<td><%= link_to product.name,admin_product_path(product) %></td>
      					<td><%= product.price %>円</td>
      					<td><%= product.genre.name %></td>
      					<td><%= product.is_active %></td>
    				</tr>
    				<% end %>
				</tbody>
				</table>
			</div>
		</div>
	</div>

