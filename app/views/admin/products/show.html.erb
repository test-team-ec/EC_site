<h1>商品詳細</h1>
<%= attachment_image_tag @product, :product_image, :fill, 50, 50, fallback: "top_page.jpg" %>
<div>
  商品名
  <%= @product.name %>
</div>

<div>
  商品説明
  <%= @product.introduction %>
</div>

<div>
  ジャンル
  <%= @product.genre.name %>
</div>

<div>
  税込価格
  <%= @product.price %>
</div>

<div>
  販売ステータス
  <%= @product.is_active %>
</div>

<div>
  <%= link_to "編集する", edit_admin_product_path(params[:id]) %>
</div>
