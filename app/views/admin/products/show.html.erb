<div class="container">
  <h3 style="margin-bottom: 30px"><span class="head-text">商品詳細</span></h3>
    <div class="row">
      <div class="col-lg-4">
          <%= attachment_image_tag @product, :product_image, fallback: "top_page.jpg",
            class:"product-image-admin" %>
      </div>
      <div class="col-lg-6 offset-lg-1">
          <div class="row" style="margin-bottom: 10px;">
            <div class="col-lg-3">
              <span>商品名</span>
            </div>
            <div class="col-lg-9">
              <%= @product.name %>
            </div>
          </div>

          <div class="row" style="margin-bottom: 10px;">
            <div class="col-lg-3">
              <p>商品説明　</p>
            </div>
           <div class="col-lg-9" >
             <%= @product.introduction %>
           </div>
          </div>

            <div class="row" style="margin-bottom: 10px;">
              <div class="col-lg-3">
                <p>ジャンル　</p>
              </div>
              <div class="col-lg-9">
                  <%= @product.genre.name %>
              </div>
            </div>

            <div class="row" style="margin-bottom: 10px;">
              <div class="col-lg-4">
                <p>税込価格(税抜価格)</p>
              </div>
              <div class="col-lg-8">
                <%= (@product.price * 1.1).to_i %> (<%= @product.price %>)円
              </div>
            </div>

            <div class="row" style="margin-bottom: 10px;">
              <div class="col-lg-4">
                <p>販売ステータス</p>
              </div>
              <div class="col-lg-8">
                  <%= @product.is_active %>
              </div>
            </div>
        </div>
    </div>
    <div>
      <%= link_to edit_admin_product_path(params[:id]) do %>
        <span class= "btn btn-primary", style="padding: 10px 30px;float: right">編集</span>
      <% end %>
    </div>
</div>