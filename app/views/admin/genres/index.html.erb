<div class="container">
  <h3 style="margin-bottom: 20px;"><span class="head-text">ジャンル一覧追加</span></h3>
  <div class="row">
    <div class="col-lg-6">
      <div style="margin-bottom: 20px;">
        <%= form_with(model: @genre, url: admin_genres_path,
            method: :post, local: true) do |f| %>
        <%= f.label :ジャンル %>
        <%= f.text_field :name %>
        <label><%= f.radio_button :is_active,  "有効" %> 有効</label>
        <label><%= f.radio_button :is_active,  "無効" %> 無効</label>
        <%= f.submit '追加' ,class:"btn btn-primary" %>
        <% end %>
      </div>
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>ジャンル</th>
            <th>状態</th>
            <th></th>
          </tr>
        </thead>
          <% @genres.each do |genre| %>
          <tr>
            <td class="align-middle"><%= genre.name %></td>
            <td class="align-middle"><%= genre.is_active %></td>
            <td class="align-middle", style="text-align: center">
              <%= link_to "編集する", edit_admin_genre_path(genre) ,class:"btn btn-primary",
                    style:"padding: 5px 40px;" %>
            </td>
          </tr>
          <% end %>
      </table>
    </div>

    <div class="col-lg-6"></div>
  </div>
</div>