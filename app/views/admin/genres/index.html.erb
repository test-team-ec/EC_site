<h1>ジャンル一覧追加</h1>
<div>
  <%= form_with(model: @genre, url: admin_genres_path, method: :post, local: true) do |f| %>
  <%= f.label :ジャンル %>
  <%= f.text_field :name %>
  <label><%= f.radio_button :is_active,  "有効" %> 有効</label>
  <label><%= f.radio_button :is_active,  "無効" %> 無効</label>
  <%= f.submit '追加する' %>
  <% end %>
</div>
<div>
    <% @genres.each do |genre| %>
    <%= genre.name %>
    <%= genre.is_active %>
    <%= link_to "編集する", edit_admin_genre_path(genre) %>
    <% end %>
</div>
