<div class="container", style="padding: 30px 0">
	<div class="row">
		<%= render "products/genre_sidebar", genres: @genres %>
		<div class="col-lg-10">
			<h3 style="padding-bottom: : 30px">
				<%= @index_title %>一覧
				<span style="font-size: 15px">
					(全<%= @products.count %>件)
				</span>
			</h3>
			<div class="products">
				<% @products.each do |product| %>
				<% if product.genre.is_active == "有効" %>
					<div class="product-content"><!-- 4つごとに折り返し-->
						<div class="product-block">
							<%= link_to product_path(product) do %>
								<%= attachment_image_tag product, :product_image, format:"jpg",
									fallback:"top_page.jpg", class:"product-image" %>
							<% end %>
							<p><%= product.name %></p>
							<p>￥<%= product.price %>円</p>
						</div>
					</div>
				<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>
