<h1>ショッピングカート</h1>
<h2>カートに追加された商品</h2>
<br>
<%= button_to 'カートを空にする', @cart, method: :delete, class: 'fbtn' %>
<br>
<table>
	<tr>
		<th></th>
		<th>商品名</th>
		<th>単価</th>
		<th>数量</th>
		<th>小計</th>
		<th></th>

	</tr>
		<% @sum = 0 %>
		<% @cart_items.each do |cart_item| %>
		<tr>
			<td></td>
			<td><%= cart_item.product.name %></td>
			<td><%= (cart_item.product.price * 1.08).to_i %>円</td>
			<td><%= cart_item.count %></td>
			<td><%= (cart_item.product.price * 1.08 * cart_item.count).to_i %>円</td>
				<% @sum += (cart_item.product.price * 1.08 * cart_item.count) %>
			<td><%= link_to "削除", customers_cart_item_path(cart_item), method: :delete %>
			</td>
		</tr>
		<% end %>

		<tr>
			<td>合計：<%= @sum.to_i %> 円</td>
		</tr>

</table>
<br>
<span>  </span><%= link_to "買い物を続ける" ,home_path, class:"btn" %><span>
