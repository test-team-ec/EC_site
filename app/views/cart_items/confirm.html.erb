<h1>ショッピングカート</h1>
<br>
<div class=row>
	<div class=col-xs-8>
		<%= button_to 'カートを空にする', @cart, method: :delete, class: 'fbtn' %>
	</div>
</div>
<br>
<table>
	<tr>
		<th></th>
		<th>商品名</th>
		<th>単価</th>
		<th>数量</th>
		<th>小計</th>
		<th></th>

	</tr>
		<% @sum = 0 %>
		<% @cart_items.each do |cart_item| %>
		<td><%= attachment_image_tag cart_item.product, :product_image, format: 'jpeg', size: "100x100" %></td>
		<tr>
			<td><%= cart_item.product.name %></td>
			<td><%= (cart_item.product.price * 1.1).to_i %>円</td>
			<td>
				<%= cart_item.count %>
				<p></p>
			</td>
			<td><%= (cart_item.product.price * 1.1).to_i * cart_item.count.to_i %>円</td>
				<% @sum += cart_item.product.price * 1.1 * cart_item.count.to_i %>
			<td><%= link_to "削除", customers_cart_item_path(cart_item), method: :delete %>
			</td>
		</tr>
		<% end %>

		<tr>
			<td>合計：<%= @sum.to_i %> 円</td>
		</tr>

</table>
<br>
<span>  </span><%= link_to "情報入力に進む" , new_customers_order_path, class:"btn" %><span>
