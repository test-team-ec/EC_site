<div class="container">
	<div class="row">
		<div class="col-xs-3">
      <h3 style="background-color: #EEEEEE; margin-top:50px;">注文履歴詳細</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-8">
      <strong>注文情報</strong>
        <table class="table">
            <tr>
              <th>注文日</th>
              <td><%= @order.created_at.strftime('%Y/%m/%d')%>
              </td>
            </tr>

            <tr>
              <th>配送先</th>
              <td><%= @order.postcode %><br>
                  <%= @order.address %><br>
                  <%= @order.name %>
              </td>
            </tr>

            <tr>
              <th>支払方法</th>
              <td>
                <%= @order.payment_method %>
              </td>
            </tr>

            <tr>
              <th>ステータス</th>
              <td><%= @order.order_status %></td>
            </tr>
        </table>
    </div>

    <div class="col-lg-4">
      <strong>請求情報</strong>
        <table class="table table-bordered">
          <tbody>
            <tr>
              <th>商品合計</th><td><%= @order.total_products_cost %></td>
            </tr>

            <tr>
              <th>配送料</th>
              <td><%= @order.postage %></td>
            </tr>

            <tr>
              <th>ご請求額</th>
              <td><%= @order.total_products_cost + @order.postage %></td>
            </tr>
          </tbody>
        </table>
    </div>
</div>
  <strong>注文内容</strong>
    <table class="table">
      <thead class="thead-light">
		    <tr>
			   <th>商品</th>
			   <th>単価（税込）</th>
			   <th>個数</th>
			   <th>小計</th>
		    </tr>
	     </thead>
	     <tbody>
        <% @order_details.each do |order_details| %>
		    <tr>
			   <td><%= order_details.product.name %> </td>
			   <td><%= (order_details.product.price * 1.1).to_i %></td>
			   <td><%= order_details.count %></td>
			   <td><%= (order_details.product.price * order_details.count * 1.1).to_i %></td>
		    </tr>
        <% end %>
	     </tbody>
    </table>
</div>
