<h3>注文履歴一覧</h3>
<div class="container">
	<div class="row">
		<div class="col-xs-12">

<table class="table table-bordered">
	<thead>
		<tr>
			<th>注文日</th>
			<th>配送先</th>
			<th>注文商品</th>
			<th>支払金額</th>
			<th>ステータス</th>
			<th>注文詳細</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
		<tr>
			<td><%= order.created_at%></td>

			<td><%= order.addres %></td>

			<td>
				
			</td>

			<td>
				<%= order.total_products_cost + order.postage %>
			</td>

			<td><%= order.order_status %></td>

			<td><%= link_to "表示する", customers_order_path(@order), class: 'btn btn-primary' %>
			</td>
		</tr>
		<% end %>
		
	</tbody>
</table>
</div>
</div>
</div>
