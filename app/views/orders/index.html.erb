<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h3 style="margin-bottom:30px;">
				<span class="head-text">注文履歴一覧</span>
			</h3>
		</div>
	</div>
<table class="table table-bordered">
	<thead class="thead-light">
		<tr>
			<th>注文日</th>
			<th>配送先</th>
			<th>注文商品</th>
			<th>支払金額</th>
			<th>ステータス</th>
			<th>注文詳細</th>

		</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
		<tr>
			<td class="align-middle">
				<%= order.created_at.strftime('%Y/%m/%d')%>
			</td>
			<td class="align-middle">
				<%= order.postcode %><br>
				<%= order.address %><br>
				<%= order.name %>
			</td>
			<td class="align-middle">
				<% order.order_details.each do |order_detail| %>
					<%= order_detail.product.name %><br>
				<% end %>
			</td>
			<td class="align-middle">
				<%= order.total_products_cost.to_i + order.postage.to_i %>円
			</td>
			<td class="align-middle"><%= order.order_status %></td>
			<td class="align-middle">
				<%= link_to "表示する", customers_order_path(order), class:'btn btn-primary' %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>

