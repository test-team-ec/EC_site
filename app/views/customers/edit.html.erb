<div class="container">
	<h3 style="margin-bottom: 20px;"><span class="head-text">会員情報編集</span></h3>
	<div class="row">
		<div class="col-lg-12">
			<%= form_for(@customer, url: customers_path) do|f| %>
			<h4>氏名</h4>
			<%= f.text_field :first_name %>
			<%= f.text_field :last_name %>

			<h4>フリガナ</h4>
			<%= f.text_field :first_name_phonetic %>
			<%= f.text_field :last_name_phonetic %>

			<h4>メールアドレス</h4>
			<%= f.email_field :email %>

			<h4>郵便番号</h4>
			<%= f.number_field :postcode %>

			<h4>電話番号</h4>
			<%= f.telephone_field :tel %>

			<%= f.submit '編集内容変更を保存する' %>

			<% end %>
		</div>
	</div>
</div>